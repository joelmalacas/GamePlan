# GamePlan Server Environment Configuration
# Development Environment Settings

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
DEBUG=true

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gameplan_db
DB_USER=gameplan_user
DB_PASSWORD=gameplan123!
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_for_gameplan_development_2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# Email Configuration (Gmail example for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@gameplan.com
FROM_NAME=GamePlan Team

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=gameplan_session_secret_development_2024
SESSION_TIMEOUT=3600000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration (allow localhost for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Trust Proxy (false for development)
TRUST_PROXY=false

# Redis Configuration (optional, comment out if not using Redis)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# External Services (optional, comment out if not using)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Notification Services (optional)
# PUSH_NOTIFICATION_KEY=your_push_notification_key
# SMS_API_KEY=your_sms_api_key
